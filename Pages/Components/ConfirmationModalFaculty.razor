@page "/modalFaculty"

@using Interface
@inject InterfaceFaculty _interfaceFaculty

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h5> @NameFaculty </h5>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col text-center">
            <button type="button" class="btn btn-danger mr-3" @onclick="(async () => await DeleteFaculty())">
                <i class="bi bi-trash"></i> Aceptar
            </button>
            <button type="button" class="btn btn-secondary mr-3"
                @onclick="(async () => await ModalInstance.CancelAsync())">
                <i class="bi bi-x-circle-fill"></i> Cancelar
            </button>
        </div>
    </div>
</div>

@code {

    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    [Parameter] public int FacultyId { get; set; }
    [Parameter] public string NameFaculty { get; set; } = string.Empty;
    private async Task DeleteFaculty()
    {
        await _interfaceFaculty.DeleteFaculty(FacultyId);
        await ModalInstance.CloseAsync();
    }
}